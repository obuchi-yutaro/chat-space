.contents.row
  .contents
    = render partial: "sidebar"
    .main
      .top_contents
        .edit_box
          .edit edit
      .center_contents
      .bottom_contents
        .bottom_contents_message
          .type_a_message
            = form_for [@message] do |f|
              .message_area
                =f.text_area :text, placeholder: 'type_a_message'
              .sent_button
                .sent_box
                  = button_tag type: "submit", class: "button_block" do
                    Send